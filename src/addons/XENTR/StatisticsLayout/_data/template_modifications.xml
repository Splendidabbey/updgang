  <modification type="public" template="lfs_macros" modification_key="xentr_sub_header" description="[XTR] Live Forum Statistics Layout - Include Sub Header" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[		<div class="tabGroup-content">]]></find>
    <replace><![CDATA[		<xf:include template="xentr_live_forum_statistics_sub_tab" />
$0]]></replace>
  </modification>
  <modification type="public" template="lfs_tab_member_definition_macros" modification_key="xentr_hide_item_icons_member_tab" description="[XTR] Live Forum Statistics Layout - Hide Item Icons On Member Tab" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[		<div class="structItem-cell structItem-cell--icon">
			<xf:fa icon="fas fa-user" />
		</div>]]></find>
    <replace><![CDATA[		<xf:if is="!$xf.options.xtrStatisticsMemberItemIcon">
			<div class="structItem-cell structItem-cell--icon">
				<xf:fa icon="fas fa-user" />
			</div>
		</xf:if>
		]]></replace>
  </modification>
  <modification type="public" template="lfs_tab_member_definition_macros" modification_key="xentr_include_order_member_tab" description="[XTR] Live Forum Statistics Layout - Include Order Member Tab" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[	<li class="structItem structItem--lfsItem" id="js-lfsItemUser-{$user.user_id}"
		{{ $date ? 'data-date="' . $date . '"' : ''}}>]]></find>
    <replace><![CDATA[$0
		<xf:if is="$xf.options.xtrStatisticsExtra">
			<div class="structItem-cell structItem-cell--order"></div>
		</xf:if>
]]></replace>
  </modification>
